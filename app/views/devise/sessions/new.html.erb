<div class="container border border-dark rounded p-4 bg-light h-100">
  <div class="d-flex flex-column text-center">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field d-flex justify-content-center text-start mt-3">
        <%= f.label :email, 'Email:',class: 'text-start' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'ml-5' %>
      </div>

      <div class="field d-flex justify-content-center mt-2">
        <%= f.label :password, 'Password:', class: 'text-start' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'ml-3' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mb-2">
        <%= f.submit "Log in", class: 'btn btn-primary border border-dark rounded' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>